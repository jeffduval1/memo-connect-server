{
  "name": "server",
  "version": "1.0.0",
  "description": "Application web de révision collaborative avec cartes intelligentes, conçue avec Angular et Express.",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "db:migrate:dev": "node -r ./load-env.js scripts/run-sql.js v001__create_cards.sql",
"db:rollback:dev": "node -r ./load-env.js scripts/run-sql.js v001__drop_cards.sql",
"db:smoke:dev": "node -r ./load-env.js scripts/run-sql.js smoke_v001.sql",
"db:migrate:v002": "node -r ./load-env.js scripts/run-sql.js scripts/sql/migrations/v002_attachments_and_meta.sql",
"db:rollback:v002": "node -r ./load-env.js scripts/run-sql.js scripts/sql/migrations/v002_down.sql",
"db:smoke:v002": "node -r ./load-env.js scripts/run-sql.js scripts/sql/smoke_v002.sql"
  
  },
  "keywords": [
    "angular",
    "express",
    "typescript",
    "frontend",
    "backend",
    "flashcards",
    "collaborative",
    "learning",
    "memo"
  ],
  "author": "Jean-François Duval",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffduval1/memo-connect.git"
  },
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
